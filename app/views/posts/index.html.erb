<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Haber Başlığı</th>
      <th>Haber İçeriği</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.msg %></td>       
        <td><%= link_to 'Haberi Göster', post %></td>
        <td><%= link_to 'Haberi Düzenle', edit_post_path(post) %></td>
        <td><%= link_to 'Haberi Sil', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Yeni Haber', new_post_path %>
